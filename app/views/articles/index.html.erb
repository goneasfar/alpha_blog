<p id="notice"><%= notice %></p>

<h1 class="text-center mt-4">Articles</h1>

<div class="container" id="article-cards">
  <% @articles.each do |article| %>
      <div class="row justify-content-center">
        <div class="col-8">
          <div class="card text-center mt-4 mb-1 shadow mb-5 bg-white rounded">
            <div class="card-header">
              Featured
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to article.title, article, class: "title-text", id: "show-article"%></h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <%= link_to 'View', article, class: "btn btn-outline-primary", id: "show-article"%>
              <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info", id: "show-article"%>
              <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure? This cannot be reversed...' }, class: "btn btn-outline-danger", id: "destroy-article"%>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>